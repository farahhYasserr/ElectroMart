
@model Order
@using Microsoft.Extensions.Options
@inject IOptions<E_commerce.Utilities.StripeData> stripe 
@section styls {
    <link href="~/css/summary.css" rel="stylesheet" />
}

<div class="wrapper">
    <div class="h5 large">Billing Address</div>
    <form method="post" action="/Customer/Cart/Summary" >
        <input type="hidden" asp-for=@Model.Id />
        <input type="hidden" asp-for=@Model.ShoppingCarts />

    <div class="row">
        <div class="col-lg-6 col-md-8 col-sm-10 offset-lg-0 offset-md-2 offset-sm-1">
            <div class="mobile h5">Billing Address</div>
            <div id="details" class="bg-white rounded pb-5">
                
                    <div class="form-group">
                        <label asp-for=@Model.User.Name class="text-muted"></label>
                        <input type="text" asp-for="@Model.User.Name" class="form-control">
                        <span asp-validation-for="@Model.User.Name"></span>
                    </div>                    
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for=@Model.User.City>City</label>
                                <div class="d-flex jusify-content-start align-items-center rounded p-2">
                                    <input asp-for="@Model.User.City" type="text">
                                    <span  class="fas fa-check text-success pr-2"></span>
                                    <span asp-validation-for="@Model.User.City"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for=@Model.User.PhoneNumber>Phone Number</label>
                                <div class="d-flex jusify-content-start align-items-center rounded p-2">
                                    <input asp-for="@Model.User.PhoneNumber" type="text">
                                    <span class="fas fa-check text-success pr-2"></span>
                                    <span asp-validation-for="@Model.User.PhoneNumber"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Address</label>
                                <div class="d-flex jusify-content-start align-items-center rounded p-2">
                                    <input asp-for="@Model.User.Address" type="text" />
                                    <span class="fas fa-check text-success pr-2"></span>
                                    <span asp-validation-for="@Model.User.Address"></span>
                                </div>
                            </div>
                        </div>                        
                    </div>                
            </div>
            
        </div>
        <div class="col-lg-6 col-md-8 col-sm-10 offset-lg-0 offset-md-2 offset-sm-1 pt-lg-0 pt-3">
            <div id="cart" class="bg-white rounded">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="h6">Cart Summary</div>
                    <div class="h6">
                        <a href="/Customer/Cart/Index">Edit</a>
                    </div>
                </div>
                 @foreach (var item in Model.ShoppingCarts)
                    {
                        <div class="d-flex jusitfy-content-between align-items-center pt-3 pb-2 border-bottom">
                            <div class="item pr-2">
                                <img src="/@item.Product.Img"
                                 alt="" width="80" height="80">
                                 <div class="number">@item.Count</div>
                            </div>
                            <div class="d-flex flex-column px-3">
                                <b class="h5">@item.Product.Name</b>
                            </div>
                            <div class="ml-auto">
                                <b class="h5">$@item.Product.Price</b>
                            </div>
                        </div>
                    } 
                
                
                
                <div class="d-flex align-items-center py-2">
                    <div class="display-5">Total</div>
                    <div class="ml-auto d-flex">
                        <div class="text-primary text-uppercase px-3">usd</div>
                        <div class="font-weight-bold">$@Model.TotalPrice</div>
                    </div>
                </div>
            </div>
           
            
            
            <div class="row pt-lg-3 pt-2 buttons mb-sm-0 mb-2">
                <div class="col-md-6">
                    <div class="btn text-uppercase">
                        <a href="/Customer/Home">back to shopping</a>
                        </div>
                </div>
                        <div class="col-md-6 pt-md-0 pt-1" style="padding-inline: 0px;">
                            <button type="submit" class="btn btn-primary">Place Order</button>
                        </div>
            </div>
            
        </div>
      </div>
    </form>
    <div class="text-muted">
        <span class="fas fa-lock"></span>
        Your information is save
    </div>
</div>
                                
                            
                           