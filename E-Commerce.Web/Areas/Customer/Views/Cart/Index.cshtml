@model ShoppingCartsVM
<section class="h-100 h-custom" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card">
                    <div class="card-body p-4">

                        <div class="row">

                            <div class="col-lg-7">
                                <h5 class="mb-3">
                                    <a href="/Customer/Home/Index" class="text-body">
                                        <i class="fas fa-long-arrow-alt-left me-2"></i>Continue shopping
                                    </a>
                                </h5>
                                <hr>

                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <div>
                                        <p class="mb-1">Shopping cart</p>
                                        <p class="mb-0">You have @Model.TotalItems items in your cart</p>
                                    </div>
                
                                </div>

                                @foreach(var item in Model.shoppingCarts) {
                                    <div id="cart-remove-@item.ProductId" class="card mb-3">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div class="d-flex flex-row align-items-center">
                                                <div>
                                                    <img src="~/@item.Product.Img"
                                                         class="img-fluid rounded-3" alt="Shopping item" style="width: 65px;">
                                                </div>
                                                <div class="ms-3">
                                                        <h5>@item.Product.Name</h5>
                                                        <p class="small mb-0">@item.Product.Description</p>
                                                </div>
                                            </div>
                                                <div id="cart-control-@item.ProductId" class="d-flex flex-row align-items-center">
                                                    <div style="display: flex; align-items: center;">
                                                        <button class="btn btn-outline-secondary" onclick="decreaseCount(@item.ProductId)">
                                                            <i class="fas fa-minus"></i>
                                                        </button>
                                                        <div style="width: 50px; text-align: center;">
                                                            <h5 id="item-count-@item.ProductId" class="fw-normal mb-0">@item.Count</h5>
                                                        </div>
                                                        <button class="btn btn-outline-secondary" onclick="increaseCount(@item.ProductId)">
                                                            <i class="fas fa-plus"></i>
                                                        </button>
                                                        <button class="btn btn-outline-danger" onclick="removeItem(@item.ProductId)">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </div>
                                                <div style="width: 80px; margin-left:5px;">
                                                    <h5 class="mb-0">$@item.Product.Price</h5>
                                                </div>
                                               
                                                </div>
                                        </div>
                                    </div>
                                </div>

                                    }
                            </div>
                            <div class="col-lg-5">

                                <div class="card bg-primary text-white rounded-3">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center mb-4">
                                            <h5 class="mb-0">Card details</h5>
                                          </div>

                                        <hr class="my-4">

                                       

                                        <div class="d-flex justify-content-between mb-4">
                                            <p class="mb-2">Total(Incl. taxes)</p>
                                            <p id="totalPriceId"  class="mb-2">$@Model.ToatalPrice</p>
                                        </div>

                                        <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-info btn-block btn-lg">
                                            <div class="d-flex justify-content-between">
                                              <a href="/Customer/Cart/Summary"> 
                                                <span> Checkout <i class="fas fa-long-arrow-alt-right ms-2"></i></span>
                                                </a>
                                            </div>
                                        </button>

                                    </div>
                                </div>

                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/shoppingCart.js">

    </script>
}